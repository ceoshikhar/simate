{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["es5", "es6", "es2017", "dom"],
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": false,
    "composite": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["./src/**/*"]
}
